<style>
    .product-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product {
        margin-top: 50px;
        width: 30%;
    }
</style>


{{#if hasProducts}}
    <div class="product-container">
        {{#each products}}
            <div style="margin-top: 50px;">
                <img height="300px" src={{this.thumbnail}} alt="product image" />
                <h3>{{this.title}}</h3>
                <p>${{this.price}}</p>
                <p>
                    <a href="http://localhost:3000/products?category={{this.category}}">{{this.category}}</a>
                </p>
                <p>
                    <a href="http://localhost:3000/products/{{this.id}}">Ver detalle</a>
                </p>
                
            </div>
        {{/each}}
    </div>

{{else}}
    <h2>La lista de productos esta vacia</h2>
{{/if}}